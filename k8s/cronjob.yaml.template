apiVersion: batch/v1beta1
kind: CronJob
metadata:
  name: batch-app
spec:
  schedule: "*/5 * * * *" # min hour day-of-month month day-of-week
  jobTemplate:
    spec:
      template:
        spec:
          containers:
            - name: simple-batch
              image: ${ECR_HOST}/kazusato/simple-batch-on-k8s:v1
              imagePullPolicy: Always
          restartPolicy: OnFailure
